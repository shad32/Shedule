<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:right="1dp"  android:bottom="1dp" android:top="1dp" android:left="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#000000"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>
    <item android:right="2dp"  android:bottom="2dp" android:top="2dp" android:left="2dp">

        <shape

            android:shape="rectangle">

            <gradient

                android:type="linear"

                android:centerColor="#ced4e5"
                android:startColor="#ced4e5"
                android:angle="90.0"/>
            <corners android:radius="1dip" />
        </shape>
    </item>
</layer-list>